<% title @user.name.capitalize %>

<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <div class="artist-info">
      <div class="artist-profile">
        <%= image_tag @user.avatar.url(:medium), :class => "profile" if !@user.avatar.nil? %>
      </div>
      <div class="content">
        <p class="name">
          <%= @user.name.capitalize if !@user.name.nil? %>
        </p>
        <p class="bio">
          <%= @user.bio if !@user.bio.nil? %>
        </p>
      </div>
    </div>
    <% if current_user == @user %>
      <div class="medium-buttons-blue">
        <%= link_to "Edit", edit_user_registration_path, :class => "medium-button-blue" %>
      </div>
    <% end %>
  </div>
</div>



    <div class="artists">
    <div class="container">
      <div class="row">
        <h2 id="shop-title"><%= @user.name %>'s Portfolios</h2>
      </div>

      <div class="row">
        <% if  @portfolios.count > 0 %>
    <% @portfolios.each do |port| %>

    <%= link_to port do %>
      <div class="col-md-4 col-sm-6 person ">
        <div class="artist">
          <%= image_tag port.image.url(:medium) %>
        </div>

        <div class="overlay">
          <p class="name">
            <%= port.title.capitalize%>
          </p>
        </div>
      </div>
    <% end %>

    <% end %>

    <% else %>

    <p>
      No portfolios available.
    </p>

    <% end %>

  </div>
</div>
</div>
