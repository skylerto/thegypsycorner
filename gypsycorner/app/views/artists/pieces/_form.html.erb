
  <%= bootstrap_form_for(@artists_piece) do |f| %>
    <% if @artists_piece.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@artists_piece.errors.count, "error") %> prohibited this piece from being saved:</h2>

        <ul>
        <% @artists_piece.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.select(:artists_portfolio_id, @portfolios.map {|p|
          [p.title, p.id]}, :include_blank => true) %>
    </div>
    <div class="form-group">
      <div class="medium-buttons-blue-left">
        <%= link_to 'New Portfolio', new_artists_portfolio_path, :class => "medium-button-blue-left" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
      <%= link_to 'Cancel', artists_path %>
    </div>

  <% end %>
