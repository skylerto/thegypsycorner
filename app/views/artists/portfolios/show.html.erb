
<div class="container">
  <div class="row">

    <div class="portfolio-info">

      <div class="portfolio-profile">

        <%= image_tag @artists_portfolio.image.url(:medium), :class => "profile" %>

      </div>
      <div class="portfolio-content">
        <p class="portfolio-name">
          <%= @artists_portfolio.title.capitalize %>
        </p>
        <p class="portfolio-artist-date">
          <%= "By " + @artists_portfolio.user.name %><%= " on " + @artists_portfolio.updated_at.strftime("%B %d, %Y") %>
        </p>
        <p class="portfolio-bio">
          <%= @artists_portfolio.content %>
        </p>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_artists_portfolio_path(@artists_portfolio) if current_user == @artists_portfolio.user %>
