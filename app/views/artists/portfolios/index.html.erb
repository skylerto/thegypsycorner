<p id="notice"><%= notice %></p>

<h1>Listing Artists Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>
        Date
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists_portfolios.each do |artists_portfolio| %>
      <tr>
        <td><%= image_tag artists_portfolio.image.url(:medium) %></td>
        <td><%= artists_portfolio.title %></td>
        <td><%= artists_portfolio.content %></td>
        <td><%= artists_portfolio.user.name %></td>
        <td>
          <%= artists_portfolio.updated_at.strftime("%B %d, %Y") %>
        </td>
        <td><%= link_to 'Show', artists_portfolio %></td>
        <td><%= link_to 'Edit', edit_artists_portfolio_path(artists_portfolio) %></td>
        <td><%= link_to 'Destroy', artists_portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Portfolio', new_artists_portfolio_path %>
