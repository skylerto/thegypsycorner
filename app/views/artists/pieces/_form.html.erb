<div class="container">
  <div class="row">
    <%= form_for(@artists_piece) do |f| %>
      <% if @artists_piece.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@artists_piece.errors.count, "error") %> prohibited this artists_piece from being saved:</h2>

          <ul>
          <% @artists_piece.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :image, 'New Image'  %><br />
        <%= f.file_field :image %>
      </div>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :portfolio %><br>
        <%= f.select(:portfolio_id, @portfolios.map {|p|
            [p.title, p.id]}, :include_blank => true) %>
            <div class="medium-buttons-blue-left">
              <%= link_to 'New Portfolio', new_artists_portfolio_path, :class => "medium-button-blue-left" %>
            </div>
      </div>
      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>

  </div>
</div>
