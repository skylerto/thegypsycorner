<p id="notice"><%= notice %></p>

<% title "Pieces" %>

<h1>Listing Artists Pieces</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>
        Date
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists_pieces.each do |artists_piece| %>
      <tr>
        <td><%= image_tag artists_piece.image.url(:medium) %></td>
        <td><%= artists_piece.title %></td>
        <td><%= artists_piece.content %></td>
        <td><%= artists_piece.user.name %></td>
        <td>
          <%= artists_piece.updated_at.strftime("%B %d, %Y") %>
        </td>
        <td><%= link_to 'Show', artists_piece %></td>
        <td><%= link_to 'Edit', edit_artists_piece_path(artists_piece) %></td>
        <td><%= link_to 'Destroy', artists_piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Piece', new_artists_piece_path %>
